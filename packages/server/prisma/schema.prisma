generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int           @id @default(autoincrement())
  email           String        @unique
  passwordHash    String
  lastName        String
  firstName       String
  title           String
  admin           Boolean       @default(false)
  verified        Boolean       @default(false)
}